/**
 * dialog组件自定义样式
 */
.ui-dialog {
    position: absolute;
    background: #ffffff;
    border-radius: 5px;
    border: none;
    box-shadow: 0 0 3px #666;
}
.ui-dialog-header {
    height: 50px;
    line-height: 50px;
    background: #ffffff;
    border-radius: 5px 5px 0 0 ;
}
.ui-dialog-title {
    margin: 0 30px;
    padding: 0;
    border-bottom: 2px solid #27a742;
    color: #333333;
    font-size: 18px;
}
.ui-dialog-content{
    padding:28px 65px 14px 65px;
}
.ui-dialog-header div.ui-dialog-close {
    right: 32px;
    top: 18px;
}
.ui-dialog-btns {
    padding:0 0 40px 0;
    text-align: center;
}
.ui-dialog-btns .submit-btn {
    background: #27a742;
    color: #ffffff;
    border: solid #27a742 1px;
}
.ui-dialog-btns .ui-dialog-btn {
    height: 36px;
    line-height: 36px;
    padding: 0 35px;
    font-size: 16px;
    cursor: pointer;
    overflow: visible;
}
.ui-dialog-btns .cancel-btn {
    background: #FFFFFF;
    color: #646464;
    border: solid #cfcfcf 1px;
}
/**
 * select组件自定义样式
 */
.ui-select-header .icon-select {
    color: #999;
    background: none;
}
.ui-select-header {
    border: 1px solid #848484;
    color: #3280a4;
}
.ui-select-header-active {
    border: 1px solid #27A742;
}
.ui-select-panel {
    border: 1px solid #5e5e5e;
    box-shadow: none;
}
.ui-select-panel .state-selected {
    background: #f5f5f5;
}
.ui-select-panel .state-hover {
    background: #f5f5f5;
}
/**
 * grid组件自定义样式
 */
.ui-grid table {
    border-collapse:collapse;
    border-spacing: 0;
    border: solid #e0e1e1 1px;
}
.ui-grid thead th {
    background: #f6f6f6;
    color: #797979;
}
.ui-grid td{
    color: #444444;
}
.ui-grid th, .ui-grid td {
    font-family: \5FAE\8F6F\96C5\9ED1;
    padding: 11px 5px;
}
.ui-grid .even td {
    background: #FFFFFF;
}
.ui-grid .state-hover td {
    background: #f8f8f8;
}
.ui-grid-bbar {
    padding: 16px 0;
}
.ui-grid .format-a a{
    color: #444444;
}
.ui-grid .format-a a:hover{
    color: #1f92c7;
    text-decoration: none;
}
.ui-grid .pagination .ui-pagination-first-nav,
.ui-grid .pagination .ui-pagination-last-nav {
    display: none;
}
.ui-grid .pagination .ui-pagination-prev-nav,
.ui-grid .pagination .ui-pagination-next-nav {
    /*text-indent: -10000px;*/
    overflow: hidden;
}
.ui-grid .pagination .ui-pagination-prev-nav {
    width: 22px;
    height: 22px;
    line-height: 10000px;
    border: none;
    padding: 0;
    margin-right: 0;
    background: transparent url(image/icon-circle-arrow-left.png) no-repeat 0 0;
}
.ui-grid .pagination .ui-pagination-prev-nav.state-disabled {
    background: transparent url(image/icon-circle-arrow-left-2.png) no-repeat 0 0;
}
.ui-grid .pagination .ui-pagination-next-nav {
    width: 22px;
    height: 22px;
    line-height: 10000px;
    border: none;
    padding: 0;
    background: transparent url(image/icon-circle-arrow-right.png) no-repeat 0 0;
}
.ui-grid .pagination .ui-pagination-next-nav.state-disabled {
    background: transparent url(image/icon-circle-arrow-right-2.png) no-repeat 0 0;
}
.ui-grid .ui-pagination a.ui-pagination-show-nav{
    border: none;
    height: 22px;
    line-height: 22px;
    color: #646464;
    padding: 0 13px;
    background: none;
    margin-right: 0;
    vertical-align: 7px;
    *vertical-align: -15px;
}
.ui-grid .ui-pagination a.ui-pagination-show-nav.state-active {
    color: #27a742;
    font-weight: bold;
}

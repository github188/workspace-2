.addproduct-index {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 10000;
}
.addproduct-index .addproduct-main {
    position: relative;
    width: 100%;
    height: 100%;
    overflow-y: auto;
    background: rgba(0,0,0,0.6);
}
.addproduct-index .prev {
    position: fixed;
    width: 100px;
    height: 200px;
    left: 0;
    top: 50%;
    margin-top:-100px;
    cursor: pointer;
    font-size: 60px;
    color: #66ccb5;
    border: none;
    background: none;
}

.addproduct-index .next {
    position: fixed;
    width: 100px;
    height: 200px;
    right: 0;
    top: 50%;
    margin-top:-100px;
    cursor: pointer;
    font-size: 60px;
    color: #66ccb5;
    border: none;
    background: none;
}
.addproduct-index .next:hover,
.addproduct-index .prev:hover
{
    color: #777;
    background: #333;
    opacity: 0.6;
}
.addproduct-index .ban {
    background: #777;
}
.addproduct-index .close {
    position: fixed;
    width: 50px;
    height: 50px;
    right: 10px;
    top: 10px;
    cursor: pointer;
    font-size: 35px;
    background: #66ccb5;
    border-radius: 50%;
    color: #fff;
    border: none;
}
.button-box {
    position: fixed;
    width: 100%;
    padding: 50px 0 20px;
    text-align: center;
    bottom: 10px;
}
.addproduct-index .button {
    width: 150px;
    height: 50px;
    font-size: 20px;
}
.addproduct-index .content {
    width: 700px;
    margin: 30px auto;
    background: #fff;
    position: relative;
    overflow: hidden;
}

.addproduct-index .content h2 {
    height: 50px;
    line-height: 50px;
    font-size: 22px;
    text-align: center;
    margin-bottom: 20px;
    background: #eee;
}
.addproduct-index .addproduct-outer {
    width: 1000000px;
    position: relative;
    left: 0;
    top: 0;
}
.addproduct-index .item {
    float: left;
    display: inline-block;
    width: 700px;
    overflow: hidden;
    min-height: 500px;
}
.addproduct-index .middle {
    width: 660px;
    padding: 0 20px;
}
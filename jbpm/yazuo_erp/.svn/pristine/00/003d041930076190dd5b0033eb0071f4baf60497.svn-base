.module-userwidget {
    /*height: 120px;*/
    /*width: 100%;*/
    background: #5f8ab8;
    padding: 20px 12px;
}
.module-userwidget .user-avatar {
    width: 80px;
    height: 80px;
    border-radius: 40px;
    background: #ffffff;
    box-shadow: 0px 0px 2px #aaaaaa;
}
.module-userwidget .user-info {
    margin-left: 10px;
    width: 114px;
}
.module-userwidget .user-name {
    font-size: 14px;
    color: #ffffff;
    margin-bottom: 12px;
}
.module-userwidget .user-action button {
    display: inline-block;
    *display: inline;
    *zoom: 1;
    padding: 0 4px;
    background: #7daada;
    height: 30px;
    line-height: normal;
    border: none;
    color: #ffffff;
    font-size: 12px;
    cursor: pointer;
    overflow:visible; /* ie6/7下 padding值会变大，不明原。参考http://blog.csdn.net/jyy_12/article/details/6636099 */
    font-family: \65B0\5B8B\4F53, \5b8b\4f53;
}
.modify-user-pwd-dialog .ff-label {
    width: 80px;
}
.modify-user-pwd-dialog .ff-value {
    margin-left: 80px;
}
.modify-user-pwd-dialog .input-text {
    width: 300px;
}
